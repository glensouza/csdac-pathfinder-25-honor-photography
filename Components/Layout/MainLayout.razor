@using Microsoft.AspNetCore.Components.Authorization
@using PathfinderPhotography.Services
@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserService UserService
@implements IDisposable

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <span class="welcome-message">Welcome, @pathfinderName!</span>
                    <form action="/logout" method="post">
                        <button type="submit" class="btn btn-link">Sign Out</button>
                    </form>
                </Authorized>
                <NotAuthorized>
                    <a href="/login">Sign In</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
        
        <footer class="footer mt-auto py-3 bg-light">
            <div class="container text-center">
                <span class="text-muted">
                    CSDAC Pathfinders - Photography Honor 2025
                </span>
                <br />
                <small class="text-muted">
                    Interested in learning to code or contributing? 
                    <a href="https://github.com/glensouza/csdac-pathfinder-25-honor-photography" target="_blank" rel="noopener noreferrer">
                        View this project on GitHub
                    </a>
                </small>
            </div>
        </footer>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private string pathfinderName = string.Empty;
    private string? cachedEmail = null;

    protected override async Task OnInitializedAsync()
    {
        AuthenticationStateProvider.AuthenticationStateChanged += OnAuthenticationStateChanged;
        await UpdatePathfinderName();
    }

    private async void OnAuthenticationStateChanged(Task<AuthenticationState> task)
    {
        try
        {
            await UpdatePathfinderName();
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            // Log the exception to aid debugging of authentication issues
            await Console.Error.WriteLineAsync($"Exception in OnAuthenticationStateChanged: {ex}");
        }
    }

    private async Task UpdatePathfinderName()
    {
        AuthenticationState authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        System.Security.Claims.ClaimsPrincipal user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            string? email = user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
            if (!string.IsNullOrEmpty(email))
            {
                // Only query database if email has changed to avoid unnecessary database calls
                if (email != cachedEmail)
                {
                    Models.User? dbUser = await UserService.GetUserByEmailAsync(email);
                    pathfinderName = dbUser?.Name ?? user.Identity.Name ?? "Pathfinder";
                    cachedEmail = email;
                }
            }
            else
            {
                // Reset if email is missing
                pathfinderName = "Pathfinder";
                cachedEmail = null;
            }
        }
        else
        {
            pathfinderName = string.Empty;
            cachedEmail = null;
        }
    }

    public void Dispose()
    {
        AuthenticationStateProvider.AuthenticationStateChanged -= OnAuthenticationStateChanged;
    }
}
