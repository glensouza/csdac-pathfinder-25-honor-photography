    </nav>
</div>

@code {
    private bool isInstructor = false;
    private bool isAdmin = false;
    private readonly SemaphoreSlim statusLock = new SemaphoreSlim(1, 1);

    protected override async Task OnInitializedAsync()
    {
        AuthenticationStateProvider.AuthenticationStateChanged += OnAuthenticationStateChanged;
        await CheckInstructorStatus();
    }

    private async void OnAuthenticationStateChanged(Task<AuthenticationState> task)
    {
        try
        {
            await CheckInstructorStatus();
            await InvokeAsync(StateHasChanged);
        }
        catch
        {
            // Ignore errors during async event handling
        }
    }

    private async Task CheckInstructorStatus()
    {
        await statusLock.WaitAsync();
        try
        {
            AuthenticationState authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            ClaimsPrincipal principal = authState.User;

            if (principal.Identity != null && principal.Identity.IsAuthenticated)
            {
                string? email = principal.FindFirst(ClaimTypes.Email)?.Value;
                if (!string.IsNullOrEmpty(email))
                {
                    User? user = await UserService.GetUserByEmailAsync(email);
                    if (user != null)
                    {
                        UserRole role = user.Role;
                        isInstructor = role == UserRole.Instructor;
                        isAdmin = role == UserRole.Admin;
                        return;
                    }
                }
            }

            isInstructor = false;
            isAdmin = false;
        }
        finally
        {
            statusLock.Release();
        }
    }

    public void Dispose()
    {
        AuthenticationStateProvider.AuthenticationStateChanged -= OnAuthenticationStateChanged;
        statusLock.Dispose();
    }
}