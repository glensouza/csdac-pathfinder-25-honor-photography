@page "/admin/users"
@using System.Security.Claims
@using PathfinderPhotography.Services
@using PathfinderPhotography.Models
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@inject UserService UserService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>User Management</PageTitle>

<ConfirmModal @ref="confirmModal" Title="Delete User" Message="@confirmMessage" OnConfirmed="OnConfirmedAction" />

<div class="container mt-4">
    <h1>User Management</h1>
    <p class="lead">Manage user roles and permissions</p>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert @(isError ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
            @message
            <button type="button" class="btn-close" @onclick="@(() => message = string.Empty)"></button>
        </div>
    }

    @if (!isAdmin)
    {
        <div class="alert alert-danger">
            <h4>Access Denied</h4>
            <p>You must be an admin to access this page.</p>
            <a href="/" class="btn btn-primary">Return to Home</a>
        </div>
    }
    else
    {

    <div class="alert alert-info mb-4">
        <strong>Note:</strong> This page allows admins to promote users to instructors and demote them back to pathfinders. All authenticated users start as Pathfinders by default.
        <br/>
        <strong>Access URL:</strong> Navigate to <code>/admin/users</code> to access this page.
        <br/>
        <strong>Delete Users:</strong> Deleting a user will permanently remove them and all their photo submissions and associated votes from the system.
    </div>

    @if (users.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (User user in users)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Role == UserRole.Admin)
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                else if (user.Role == UserRole.Instructor)
                                {
                                    <span class="badge bg-primary">Instructor</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pathfinder</span>
                                }
                            </td>
                            <td>@user.CreatedDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (user.Email != currentUserEmail && user.Role != UserRole.Admin)
                                {
                                    <div class="btn-group" role="group">
                                        @if (user.Role == UserRole.Pathfinder)
                                        {
                                            <button class="btn btn-sm btn-primary" @onclick="() => PromptRoleChange(user.Email, UserRole.Instructor)">
                                                Promote to Instructor
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-warning" @onclick="() => PromptRoleChange(user.Email, UserRole.Pathfinder)">
                                                Demote to Pathfinder
                                            </button>
                                        }
                                        <button class="btn btn-sm btn-danger" @onclick="() => PromptDeleteUser(user.Email, user.Name)">
                                            Delete
                                        </button>
                                    </div>
                                }
                                else if (user.Role == UserRole.Admin)
                                {
                                    <span class="text-muted">Admin</span>
                                }
                                else
                                {
                                    <span class="text-muted">Current User</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">No users found. Users will appear here once they sign in for the first time.</p>
        </div>
    }

    <div class="mt-4">
        <a href="/" class="btn btn-outline-secondary">‚Üê Back to Home</a>
    </div>
    }
</div>

@code {
    private List<User> users = [];
    private string message = string.Empty;
    private bool isError = false;
    private string currentUserEmail = string.Empty;
    private bool isAdmin = false;

    private ConfirmModal? confirmModal;
    private string? confirmMessage;
    private string pendingUserEmail = string.Empty;
    private string pendingUserName = string.Empty;
    private string pendingRoleAction = string.Empty; // "promote" or "demote"
    private UserRole pendingRole;

    protected override async Task OnInitializedAsync()
    {
        AuthenticationState authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        ClaimsPrincipal user = authState.User;
        
        if (user.Identity?.IsAuthenticated == true)
        {
            currentUserEmail = user.FindFirst(ClaimTypes.Email)?.Value ?? "";
            string currentUserName = user.FindFirst(ClaimTypes.Name)?.Value ?? "";
            
            if (!string.IsNullOrEmpty(currentUserEmail))
            {
                // Ensure user exists in database
                await UserService.GetOrCreateUserAsync(currentUserEmail, currentUserName);
                
                // Check if current user is admin
                isAdmin = await UserService.IsAdminAsync(currentUserEmail);
            }
        }
        else
        {
            NavigationManager.NavigateTo("/login");
            return;
        }

        if (isAdmin)
        {
            await LoadUsers();
        }
    }

    private async Task LoadUsers()
    {
        users = await UserService.GetAllUsersAsync();
    }

    private void PromptRoleChange(string email, UserRole role)
    {
        pendingUserEmail = email;
        pendingRole = role;
        pendingRoleAction = role == UserRole.Instructor ? "Promote to Instructor" : "Demote to Pathfinder";
        if (confirmModal == null)
        {
            return;
        }

        confirmMessage = $"Are you sure you want to {pendingRoleAction.ToLower()} for {email}?";
        confirmModal.Show();
    }

    private void PromptDeleteUser(string email, string name)
    {
        pendingUserEmail = email;
        pendingUserName = name;
        confirmMessage = $"Permanently delete user {name} ({email}) and all their submissions and votes?";
        confirmModal?.Show();
    }

    private async Task OnConfirmedAction()
    {
        try
        {
            if (!string.IsNullOrEmpty(pendingRoleAction))
            {
                await UserService.SetUserRoleAsync(pendingUserEmail, pendingRole, currentUserEmail);
                message = pendingRole == UserRole.Instructor ? $"User {pendingUserEmail} promoted to Instructor." : $"User {pendingUserEmail} demoted to Pathfinder.";
                pendingRoleAction = string.Empty;
            }
            else if (!string.IsNullOrEmpty(pendingUserEmail))
            {
                await UserService.DeleteUserAsync(pendingUserEmail, currentUserEmail);
                message = $"User {pendingUserName} ({pendingUserEmail}) and all their submissions have been deleted.";
            }

            isError = false;
            await LoadUsers();
        }
        catch (Exception ex)
        {
            message = ex.Message;
            isError = true;
        }
        finally
        {
            pendingUserEmail = string.Empty;
            pendingUserName = string.Empty;
            pendingRoleAction = string.Empty;
        }
    }
}
