@page "/admin/users"
@using System.Security.Claims
@using PathfinderPhotography.Services
@using PathfinderPhotography.Models
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@inject UserService UserService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>User Management</PageTitle>

<div class="container mt-4">
    <h1>User Management</h1>
    <p class="lead">Manage user roles and permissions</p>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert @(isError ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
            @message
            <button type="button" class="btn-close" @onclick="@(() => message = string.Empty)"></button>
        </div>
    }

    @if (!isAdmin)
    {
        <div class="alert alert-danger">
            <h4>Access Denied</h4>
            <p>You must be an admin to access this page.</p>
            <a href="/" class="btn btn-primary">Return to Home</a>
        </div>
    }
    else
    {

    <div class="alert alert-info mb-4">
        <strong>Note:</strong> This page allows admins to promote users to instructors and demote them back to pathfinders. All authenticated users start as Pathfinders by default.
        <br/>
        <strong>Access URL:</strong> Navigate to <code>/admin/users</code> to access this page.
        <br/>
        <strong>Delete Users:</strong> Deleting a user will permanently remove them and all their photo submissions and associated votes from the system.
    </div>

    @if (users.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (User user in users)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Role == UserRole.Admin)
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                else if (user.Role == UserRole.Instructor)
                                {
                                    <span class="badge bg-primary">Instructor</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pathfinder</span>
                                }
                            </td>
                            <td>@user.CreatedDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (user.Email != currentUserEmail && user.Role != UserRole.Admin)
                                {
                                    <div class="btn-group" role="group">
                                        @if (user.Role == UserRole.Pathfinder)
                                        {
                                            <button class="btn btn-sm btn-primary" @onclick="() => PromoteToInstructor(user.Email)">
                                                Promote to Instructor
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-warning" @onclick="() => DemoteToPathfinder(user.Email)">
                                                Demote to Pathfinder
                                            </button>
                                        }
                                        <button class="btn btn-sm btn-danger" @onclick="() => ShowDeleteConfirmation(user.Email, user.Name)">
                                            Delete
                                        </button>
                                    </div>
                                }
                                else if (user.Role == UserRole.Admin)
                                {
                                    <span class="text-muted">Admin (Database Only)</span>
                                }
                                else
                                {
                                    <span class="text-muted">Current User</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">No users found. Users will appear here once they sign in for the first time.</p>
        </div>
    }

    <div class="mt-4">
        <a href="/" class="btn btn-outline-secondary">← Back to Home</a>
    </div>
    }
</div>

@if (showDeleteConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm User Deletion</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <strong>⚠️ Warning:</strong> This action cannot be undone!
                    </div>
                    <p>Are you sure you want to delete user <strong>@userToDeleteName</strong> (@userToDeleteEmail)?</p>
                    <p>This will permanently remove:</p>
                    <ul>
                        <li>The user account</li>
                        <li>All photo submissions by this user</li>
                        <li>All votes involving their photos</li>
                        <li>All votes made by this user</li>
                    </ul>
                    <p><strong>Note:</strong> ELO ratings will be automatically recalculated for photos affected by removing this user's votes.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete">Delete User</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<User> users = [];
    private string message = string.Empty;
    private bool isError = false;
    private string currentUserEmail = string.Empty;
    private bool isAdmin = false;
    private bool showDeleteConfirmation = false;
    private string userToDeleteEmail = string.Empty;
    private string userToDeleteName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        AuthenticationState authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        ClaimsPrincipal user = authState.User;
        
        if (user.Identity?.IsAuthenticated == true)
        {
            currentUserEmail = user.FindFirst(ClaimTypes.Email)?.Value ?? "";
            string currentUserName = user.FindFirst(ClaimTypes.Name)?.Value ?? "";
            
            if (!string.IsNullOrEmpty(currentUserEmail))
            {
                // Ensure user exists in database
                await UserService.GetOrCreateUserAsync(currentUserEmail, currentUserName);
                
                // Check if current user is admin
                isAdmin = await UserService.IsAdminAsync(currentUserEmail);
            }
        }
        else
        {
            NavigationManager.NavigateTo("/login");
            return;
        }

        if (isAdmin)
        {
            await LoadUsers();
        }
    }

    private async Task LoadUsers()
    {
        users = await UserService.GetAllUsersAsync();
    }

    private async Task PromoteToInstructor(string email)
    {
        try
        {
            await UserService.SetUserRoleAsync(email, UserRole.Instructor);
            message = $"User {email} has been promoted to Instructor.";
            isError = false;
            await LoadUsers();
        }
        catch (Exception ex)
        {
            message = $"Error promoting user: {ex.Message}";
            isError = true;
        }
    }

    private async Task DemoteToPathfinder(string email)
    {
        try
        {
            await UserService.SetUserRoleAsync(email, UserRole.Pathfinder);
            message = $"User {email} has been demoted to Pathfinder.";
            isError = false;
            await LoadUsers();
        }
        catch (Exception ex)
        {
            message = $"Error demoting user: {ex.Message}";
            isError = true;
        }
    }

    private void ShowDeleteConfirmation(string email, string name)
    {
        userToDeleteEmail = email;
        userToDeleteName = name;
        showDeleteConfirmation = true;
    }

    private void CancelDelete()
    {
        showDeleteConfirmation = false;
        userToDeleteEmail = string.Empty;
        userToDeleteName = string.Empty;
    }

    private async Task ConfirmDelete()
    {
        try
        {
            await UserService.DeleteUserAsync(userToDeleteEmail);
            message = $"User {userToDeleteName} ({userToDeleteEmail}) and all their submissions have been deleted.";
            isError = false;
            await LoadUsers();
        }
        catch (Exception ex)
        {
            message = $"Error deleting user: {ex.Message}";
            isError = true;
        }
        finally
        {
            showDeleteConfirmation = false;
            userToDeleteEmail = string.Empty;
            userToDeleteName = string.Empty;
        }
    }
}
