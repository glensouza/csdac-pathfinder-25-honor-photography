@page "/admin/users"
@using System.Security.Claims
@using PathfinderPhotography.Services
@using PathfinderPhotography.Models
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@inject UserService UserService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>User Management</PageTitle>

<div class="container mt-4">
    <h1>User Management</h1>
    <p class="lead">Manage user roles and permissions</p>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert @(isError ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
            @message
            <button type="button" class="btn-close" @onclick="@(() => message = string.Empty)"></button>
        </div>
    }

    <div class="alert alert-info mb-4">
        <strong>Note:</strong> This page allows you to promote users to instructors. All authenticated users start as Pathfinders by default.
        <br/>
        <strong>Access URL:</strong> Navigate to <code>/admin/users</code> to access this page.
    </div>

    @if (users.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (User user in users)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Role == UserRole.Instructor)
                                {
                                    <span class="badge bg-primary">Instructor</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pathfinder</span>
                                }
                            </td>
                            <td>@user.CreatedDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (user.Email != currentUserEmail)
                                {
                                    @if (user.Role == UserRole.Pathfinder)
                                    {
                                        <button class="btn btn-sm btn-primary" @onclick="() => PromoteToInstructor(user.Email)">
                                            Promote to Instructor
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-warning" @onclick="() => DemoteToPathfinder(user.Email)">
                                            Demote to Pathfinder
                                        </button>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Current User</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">No users found. Users will appear here once they sign in for the first time.</p>
        </div>
    }

    <div class="mt-4">
        <a href="/" class="btn btn-outline-secondary">‚Üê Back to Home</a>
    </div>
</div>

@code {
    private List<User> users = new();
    private string message = string.Empty;
    private bool isError = false;
    private string currentUserEmail = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        AuthenticationState authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        ClaimsPrincipal user = authState.User;
        
        if (user.Identity?.IsAuthenticated == true)
        {
            currentUserEmail = user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "";
            string currentUserName = user.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value ?? "";
            
            if (!string.IsNullOrEmpty(currentUserEmail))
            {
                // Ensure user exists in database
                await UserService.GetOrCreateUserAsync(currentUserEmail, currentUserName);
            }
        }
        else
        {
            NavigationManager.NavigateTo("/login");
            return;
        }

        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        users = await UserService.GetAllUsersAsync();
    }

    private async Task PromoteToInstructor(string email)
    {
        try
        {
            await UserService.SetUserRoleAsync(email, UserRole.Instructor);
            message = $"User {email} has been promoted to Instructor.";
            isError = false;
            await LoadUsers();
        }
        catch (Exception ex)
        {
            message = $"Error promoting user: {ex.Message}";
            isError = true;
        }
    }

    private async Task DemoteToPathfinder(string email)
    {
        try
        {
            await UserService.SetUserRoleAsync(email, UserRole.Pathfinder);
            message = $"User {email} has been demoted to Pathfinder.";
            isError = false;
            await LoadUsers();
        }
        catch (Exception ex)
        {
            message = $"Error demoting user: {ex.Message}";
            isError = true;
        }
    }
}
