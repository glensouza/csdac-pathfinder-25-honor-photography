@page "/submit"
@using System.Security.Claims
@using PathfinderPhotography.Services
@using PathfinderPhotography.Models
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@inject CompositionRuleService RuleService
@inject PhotoSubmissionService SubmissionService
@inject UserService UserService
@inject IWebHostEnvironment Environment
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Submit Photos</PageTitle>

<div class="container mt-4">
    <h1>Submit Your Photos</h1>
    <p class="lead">Upload one photo for each composition rule and explain how you applied it.</p>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="@(() => successMessage = string.Empty)"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = string.Empty)"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <EditForm Model="@currentSubmission" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                
                <div class="mb-3">
                    <label class="form-label">Your Name</label>
                    <InputText class="form-control" @bind-Value="currentSubmission.PathfinderName" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label">Composition Rule</label>
                    <InputSelect class="form-select" @bind-Value="currentSubmission.CompositionRuleId" @bind-Value:after="OnRuleChanged">
                        <option value="0">-- Select a Rule --</option>
                        @foreach (CompositionRule rule in rules)
                        {
                            <option value="@rule.Id">@rule.Id. @rule.Name</option>
                        }
                    </InputSelect>
                </div>

                @if (currentSubmission.CompositionRuleId > 0)
                {
                    CompositionRule? selectedRule = RuleService.GetRuleById(currentSubmission.CompositionRuleId);
                    if (selectedRule != null)
                    {
                        <div class="alert alert-info">
                            <strong>@selectedRule.Name:</strong> @selectedRule.Description
                        </div>
                    }

                    PhotoSubmission? existingSubmission = userSubmissions.FirstOrDefault(s => s.CompositionRuleId == currentSubmission.CompositionRuleId);
                    if (existingSubmission != null)
                    {
                        <div class="alert alert-warning">
                            <strong>Existing Submission:</strong> You have already submitted a photo for this rule.
                            <br/>
                            <strong>Status:</strong> 
                            @if (existingSubmission.GradeStatus == GradeStatus.NotGraded)
                            {
                                <span class="badge bg-secondary">Not Graded Yet</span>
                            }
                            else if (existingSubmission.GradeStatus == GradeStatus.Pass)
                            {
                                <span class="badge bg-success">✓ Pass</span>
                            }
                            else if (existingSubmission.GradeStatus == GradeStatus.Fail)
                            {
                                <span class="badge bg-danger">✗ Fail - You can resubmit</span>
                            }
                            @if (existingSubmission.GradeStatus == GradeStatus.Fail)
                            {
                                <br/>
                                <small>This will be version @(existingSubmission.SubmissionVersion + 1) of your submission.</small>
                            }
                            else if (existingSubmission.GradeStatus == GradeStatus.Pass)
                            {
                                <br/>
                                <small>You cannot resubmit a photo that has already passed.</small>
                            }
                        </div>
                    }
                }

                <div class="mb-3">
                    <label class="form-label">Upload Photo</label>
                    <InputFile class="form-control" OnChange="@HandleFileSelected" accept="image/*" />
                    @if (!string.IsNullOrEmpty(selectedFileName))
                    {
                        <small class="text-muted">Selected: @selectedFileName</small>
                    }
                </div>

                <div class="mb-3">
                    <label class="form-label">Describe How You Applied This Rule</label>
                    <InputTextArea class="form-control" @bind-Value="currentSubmission.Description" 
                                   rows="4" 
                                   placeholder="Explain what you did in this photo to demonstrate the composition rule..." />
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Submitting...</span>
                        }
                        else
                        {
                            <span>Submit Photo</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>

    <div class="mt-4">
        <h3>Your Submissions</h3>
        @if (userSubmissions.Any())
        {
            <div class="row">
                @foreach (PhotoSubmission submission in userSubmissions)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <img src="/api/images/@submission.Id" class="card-img-top" alt="@submission.CompositionRuleName" 
                                 style="height: 200px; object-fit: cover;" />
                            <div class="card-body">
                                <h6 class="card-title">
                                    @submission.CompositionRuleName
                                    @if (submission.SubmissionVersion > 1)
                                    {
                                        <span class="badge bg-warning">v@submission.SubmissionVersion</span>
                                    }
                                </h6>
                                <p class="card-text small">@submission.Description</p>
                                <div class="mb-2">
                                    @if (submission.GradeStatus == GradeStatus.NotGraded)
                                    {
                                        <span class="badge bg-secondary">Not Graded Yet</span>
                                    }
                                    else if (submission.GradeStatus == GradeStatus.Pass)
                                    {
                                        <span class="badge bg-success">✓ Pass</span>
                                    }
                                    else if (submission.GradeStatus == GradeStatus.Fail)
                                    {
                                        <span class="badge bg-danger">✗ Fail</span>
                                    }
                                </div>
                                <small class="text-muted">@submission.SubmissionDate.ToString("MMM dd, yyyy")</small>
                                @if (!string.IsNullOrEmpty(submission.GradedBy))
                                {
                                    <br/>
                                    <small class="text-muted">Graded by @submission.GradedBy</small>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="alert alert-info mt-3">
                <strong>Progress:</strong> You've submitted @userSubmissions.Count out of 10 photos.
                <br/>
                <strong>Graded:</strong> @userSubmissions.Count(s => s.GradeStatus != GradeStatus.NotGraded) submissions
                <br/>
                <strong>Passed:</strong> @userSubmissions.Count(s => s.GradeStatus == GradeStatus.Pass) submissions
            </div>
        }
        else
        {
            <p class="text-muted">No submissions yet. Start uploading your photos!</p>
        }
    </div>

    <div class="mt-4">
        <a href="/" class="btn btn-outline-secondary">← Back to Rules</a>
    </div>
</div>

@code {
    private List<CompositionRule> rules = new();
    private PhotoSubmission currentSubmission = new();
    private IBrowserFile? selectedFile;
    private string selectedFileName = string.Empty;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;
    private bool isSubmitting = false;
    private List<PhotoSubmission> userSubmissions = new();
    private string currentUserEmail = string.Empty;
    private string currentUserName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        AuthenticationState authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        ClaimsPrincipal user = authState.User;
        
        if (user.Identity?.IsAuthenticated == true)
        {
            currentUserEmail = user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "";
            currentUserName = user.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value ?? "";
            
            if (!string.IsNullOrEmpty(currentUserEmail))
            {
                // Ensure user exists in database
                await UserService.GetOrCreateUserAsync(currentUserEmail, currentUserName);
                
                currentSubmission.PathfinderName = currentUserName;
                currentSubmission.PathfinderEmail = currentUserEmail;
                
                userSubmissions = await SubmissionService.GetSubmissionsByPathfinderAsync(currentUserEmail);
            }
        }
        else
        {
            NavigationManager.NavigateTo("/login");
        }

        rules = RuleService.GetAllRules();
    }

    private async Task OnRuleChanged()
    {
        // Refresh submissions when rule changes
        await Task.CompletedTask;
    }

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        selectedFileName = e.File.Name;
        errorMessage = string.Empty;
    }

    private async Task HandleSubmit()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;

        // Validation
        if (string.IsNullOrWhiteSpace(currentSubmission.PathfinderName))
        {
            errorMessage = "Please enter your name.";
            return;
        }

        if (currentSubmission.CompositionRuleId == 0)
        {
            errorMessage = "Please select a composition rule.";
            return;
        }

        if (selectedFile == null)
        {
            errorMessage = "Please select a photo to upload.";
            return;
        }

        if (string.IsNullOrWhiteSpace(currentSubmission.Description))
        {
            errorMessage = "Please describe how you applied the composition rule.";
            return;
        }

        // Check if there's an existing submission for this rule
        PhotoSubmission? existingSubmission = await SubmissionService.GetLatestSubmissionForRuleAsync(currentUserEmail, currentSubmission.CompositionRuleId);
        
        // If there's an existing submission that passed, don't allow resubmission
        if (existingSubmission != null && existingSubmission.GradeStatus == GradeStatus.Pass)
        {
            errorMessage = "You cannot resubmit a photo that has already passed.";
            return;
        }

        // Check file size (max 10MB)
        if (selectedFile.Size > 10 * 1024 * 1024)
        {
            errorMessage = "File size must be less than 10MB.";
            return;
        }

        isSubmitting = true;

        try
        {
            // Save the image data to database
            using var stream = selectedFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
            var (imageData, contentType) = await SubmissionService.SaveImageDataAsync(stream, selectedFile.Name);

            // Create submission
            CompositionRule? rule = RuleService.GetRuleById(currentSubmission.CompositionRuleId);
            currentSubmission.CompositionRuleName = rule?.Name ?? "Unknown";
            currentSubmission.ImagePath = selectedFile.Name; // Keep original filename for reference
            currentSubmission.ImageData = imageData;
            currentSubmission.ImageContentType = contentType;
            currentSubmission.GradeStatus = GradeStatus.NotGraded;
            
            // Set version number
            if (existingSubmission != null)
            {
                currentSubmission.SubmissionVersion = existingSubmission.SubmissionVersion + 1;
                currentSubmission.PreviousSubmissionId = existingSubmission.Id;
            }
            else
            {
                currentSubmission.SubmissionVersion = 1;
            }

            await SubmissionService.AddSubmissionAsync(currentSubmission);

            userSubmissions = await SubmissionService.GetSubmissionsByPathfinderAsync(currentUserEmail);
            
            if (existingSubmission != null && existingSubmission.GradeStatus == GradeStatus.Fail)
            {
                successMessage = $"Photo resubmitted successfully (version {currentSubmission.SubmissionVersion})! You've submitted {userSubmissions.Count} out of 10 photos.";
            }
            else
            {
                successMessage = $"Photo submitted successfully! You've submitted {userSubmissions.Count} out of 10 photos.";
            }

            // Reset form for next submission, but keep the name
            string name = currentSubmission.PathfinderName;
            string email = currentSubmission.PathfinderEmail;
            currentSubmission = new PhotoSubmission { PathfinderName = name, PathfinderEmail = email };
            selectedFile = null;
            selectedFileName = string.Empty;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error submitting photo: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
